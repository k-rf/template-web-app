{
  "name": "template-web-app-backend",
  "remoteUser": "template-web-app-backend",
  "dockerComposeFile": "../../docker-compose.dev.yaml",
  "service": "backend",
  "postAttachCommand": "yarn install",
  "workspaceFolder": "/workspaces/backend",
  "overrideCommand": true,
  "shutdownAction": "none",
  "runServices": ["frontend", "backend"],
  "customizations": {
    "vscode": {
      "extensions": [
        "AbhijoyBasak.nestjs-files",
        "albymor.increment-selection",
        "bodil.file-browser",
        "christian-kohler.path-intellisense",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "foxundermoon.shell-format",
        "Gruntfuggly.todo-tree",
        "hbenl.vscode-test-explorer",
        "hediet.vscode-drawio",
        "irongeek.vscode-env",
        "kahole.magit",
        "kavod-io.vscode-jest-test-adapter",
        "mhutchie.git-graph",
        "mikestead.dotenv",
        "ms-azuretools.vscode-docker",
        "MS-vsliveshare.vsliveshare",
        "mutantdino.resourcemonitor",
        "Perkovec.emoji",
        "Prisma.prisma",
        "redhat.vscode-yaml",
        "shd101wyy.markdown-preview-enhanced",
        "streetsidesoftware.code-spell-checker",
        "taichi.vscode-textlint",
        "yzhang.markdown-all-in-one",
        "yoavbls.pretty-ts-errors"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSaveMode": "file",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": true
        },
        "files.trimFinalNewlines": true,
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "eslint.workingDirectories": [{ "mode": "auto" }],
        "eslint.experimental.useFlatConfig": true,
        "eslint.rules.customizations": [{ "rule": "@cspell/spellchecker", "severity": "off" }],
        "[markdown]": {
          "editor.unicodeHighlight.ambiguousCharacters": false,
          "editor.unicodeHighlight.invisibleCharacters": false,
          "editor.wordWrap": "on",
          "editor.quickSuggestions": {
            "other": "on",
            "comments": "off",
            "strings": "off"
          },
          "files.trimTrailingWhitespace": false,
          "cSpell.fixSpellingWithRenameProvider": true,
          "cSpell.advanced.feature.useReferenceProviderWithRename": true,
          "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/"
        }
      }
    }
  }
}
